{
  "name": "contao-community-alliance/events-contao-bindings",
  "description": "This library turns the Contao Core API into events.",
  "license": "LGPL-3.0-or-later",
  "type": "contao-bundle",
  "keywords": [
    "contao",
    "bundle",
    "events",
    "bindings",
    "cca"
  ],
  "authors": [
    {
      "name": "Christian Schiffler",
      "email": "c.schiffler@cyberspectrum.de",
      "homepage": "https://www.cyberspectrum.de",
      "role": "Developer"
    },
    {
      "name": "Stefan Heimes",
      "email": "stefan_heimes@hotmail.com",
      "role": "Developer"
    }
  ],
  "homepage": "https://c-c-a.org/",
  "support": {
    "email": "info@contao-community-alliance.de",
    "issues": "https://github.com/contao-community-alliance/events-contao-bindings/issues",
    "irc": "irc://irc.freenode.org/contao.cca",
    "source": "https://github.com/contao-community-alliance/events-contao-bindings"
  },
  "require": {
    "php": "^8.2",
    "contao/core-bundle": "^5.3",
    "psr/log": "^2.0 || ^3.0",
    "symfony/config": "^6.3",
    "symfony/dependency-injection": "^6.3",
    "symfony/event-dispatcher": "^6.3",
    "symfony/event-dispatcher-contracts": "^2.0 || ^3.0",
    "symfony/http-kernel": "^6.3"
  },
  "require-dev": {
    "contao/calendar-bundle": "^5.3",
    "contao/comments-bundle": "^5.3",
    "contao/manager-plugin": "^2.2",
    "contao/news-bundle": "^5.3",
    "phpcq/runner-bootstrap": "^1.0@dev"
  },
  "conflict": {
    "contao-community-alliance/event-dispatcher": "<2.0 >=3.0"
  },
  "autoload": {
    "psr-4": {
      "ContaoCommunityAlliance\\Contao\\Bindings\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ContaoCommunityAlliance\\Contao\\Bindings\\Test\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "contao-components/installer": false,
      "contao/manager-plugin": false,
      "php-http/discovery": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "5.0.x-dev"
    },
    "contao-manager-plugin": "ContaoCommunityAlliance\\Contao\\Bindings\\ContaoManager\\Plugin"
  }
}
